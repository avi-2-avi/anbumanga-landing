---
import { Image } from 'astro:assets';
import whatsapp from "../assets/svgs/whatsapp.svg"; 

const whatsappNumber = '+51955004465';
const whatsappURL = `https://wa.me/${whatsappNumber}`;
---

<button 
  onclick={`window.location.href='${whatsappURL}'`} 
  class="fixed bottom-4 right-4 z-50 bg-white p-3 border-am-gray-light border-2 rounded-full group"
>
  <div class="absolute bottom-16 right-0 mb-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
    <div class="bg-white text-base rounded-xl p-4 right-0 drop-shadow-xl w-36">
      Contactate con nosotros por Whatsapp
      <svg class="absolute text-black h-4 w-full left-6 top-full" x="0px" y="0px" viewBox="0 0 255 255">
        <polygon class="fill-white" points="0,0 127.5,127.5 255,0"/>
      </svg>
    </div>
  </div>
  <Image class="w-12 icon" src={whatsapp} alt="Ir a Whatsapp." />
</button>
